# ===========================================
# AgentX Agentic RAG - 环境变量配置
# ===========================================
# 复制此文件为 .env 并填写实际值
# cp .env.example .env

# -------------------------------------------
# 应用配置
# -------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost

# JWT 密钥（生产环境请使用强随机字符串）
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# -------------------------------------------
# 数据库配置
# -------------------------------------------
# SQLite 数据库路径（相对于项目根目录）
DATABASE_PATH=./data/agentic-rag.db

# -------------------------------------------
# 向量数据库配置 (Qdrant)
# -------------------------------------------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Collection 名称
QDRANT_COLLECTION_NAME=agentic_rag_documents

# -------------------------------------------
# AI 服务配置
# -------------------------------------------
# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API（用于 Embeddings）
OPENAI_API_KEY=sk-xxxxx

# 默认 LLM 模型
DEFAULT_LLM_MODEL=claude-sonnet-4-20250514

# 默认 Embedding 模型
DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# -------------------------------------------
# 文档处理配置
# -------------------------------------------
# 最大文件大小（字节）
MAX_FILE_SIZE=10485760

# 支持的文件类型
SUPPORTED_FILE_TYPES=pdf,docx,txt,md,xlsx

# 文档分块大小
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# -------------------------------------------
# 日志配置
# -------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=pretty

# -------------------------------------------
# 开发配置
# -------------------------------------------
# 启用 API 文档
ENABLE_API_DOCS=true

# 启用 CORS（开发环境）
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:5173